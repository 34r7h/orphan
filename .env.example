# Coinbase Developer Platform (CDP) Configuration


# Get your API key from https://portal.cdp.coinbase.com/
VITE_ONCHAINKIT_API_KEY=your_onchainkit_api_key_here

# WalletConnect Configuration
# Get your project ID from https://cloud.walletconnect.com/
VITE_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Network Configuration
# Set to 'true' to enable testnet support, 'false' for mainnet only
VITE_ENABLE_TESTNETS=true

# RPC URLs (optional - defaults are provided in the code)
# You can use your own RPC providers for better performance
VITE_BASE_RPC_URL=https://base.llamarpc.com
VITE_BASE_SEPOLIA_RPC_URL=https://base-sepolia.public.blastapi.io
VITE_MAINNET_RPC_URL=https://eth.llamarpc.com

# Contract Addresses (update these after deploying your contracts)
# Base Mainnet
VITE_BASE_IDEA_NFT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_BASE_PROJECT_NFT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_BASE_INVESTMENT_NFT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_BASE_ESCROW_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
VITE_BASE_PAYMENT_PROCESSOR_ADDRESS=0x0000000000000000000000000000000000000000

# Base Sepolia Testnet
VITE_BASE_SEPOLIA_IDEA_NFT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_BASE_SEPOLIA_PROJECT_NFT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_BASE_SEPOLIA_INVESTMENT_NFT_ADDRESS=0x0000000000000000000000000000000000000000
VITE_BASE_SEPOLIA_ESCROW_FACTORY_ADDRESS=0x0000000000000000000000000000000000000000
VITE_BASE_SEPOLIA_PAYMENT_PROCESSOR_ADDRESS=0x0000000000000000000000000000000000000000

# API Configuration (if you have a backend)
VITE_API_URL=http://localhost:3001
VITE_API_KEY=your_api_key_here

# IPFS Configuration (for NFT metadata storage)
VITE_IPFS_GATEWAY=https://ipfs.io/ipfs/
VITE_PINATA_API_KEY=your_pinata_api_key_here
VITE_PINATA_SECRET_KEY=your_pinata_secret_key_here

# Feature Flags
VITE_ENABLE_AI_TOOLS=true
VITE_ENABLE_ANALYTICS=false

# Development Settings
VITE_LOG_LEVEL=info
